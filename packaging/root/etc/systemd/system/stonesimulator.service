[Unit]
Description=StoneSimulator service file

[Service]
EnvironmentFile=/etc/stonesimulator/config
ExecStart=/usr/local/bin/stonesimulator --host $STONESIM_HOST --port $STONESIM_PORT --user $STONESIM_USER --passwd $STONESIM_PASSWD --size $STONESIM_SIZE --interval $STONESIM_INTERVAL --stones $STONESIM_STONES
TimeoutStopSec=10
ExecStop=/bin/kill -2 \$MAINPID

[Install]
WantedBy=multi-user.target
